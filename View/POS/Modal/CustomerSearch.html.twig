<!-- Ajax Search Modal -->
<div class="modal fade" id="customerSearchModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="d-flex w-100">
                    <div class="pr-2 flex-grow-1">
                        <div class="input-icon">
                            <input class="form-control" id="customerSearchBox" type="text"
                                   placeholder="Buscar..." autocomplete="off" data-target="none">
                            <span class="input-icon-addon"><i class="fas fa-search"></i></span>
                        </div>
                    </div>
                    <button type="button" id="searchNIT" class="mr-2 btn btn-icon btn-round btn-success"
                            data-toggle="collapse" data-target="#new-customer-form">
                        <i class="fas fa-user-plus fa-fw"></i>
                    </button>
                    <button type="button" class="btn btn-icon btn-round btn-danger" data-dismiss="modal">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="modal-body">
                <div class="collapse mt-2" id="new-customer-form">
                    <div class="form-group">
                        <label for="newCustomerTaxID">{{ i18n.trans('cifnif') }}</label>
                        <input type="text" class="form-control" id="newCustomerTaxID">
                    </div>
                    <div class="form-group">
                        <label for="newCustomerName">{{ i18n.trans('name-or-business-name') }}</label>
                        <input type="text" class="form-control" id="newCustomerName">
                    </div>
                    <div class="form-group">
                        <label for="newCustomerRef">{{ "Referencia" }}</label>
                        <textarea class="form-control" cols="10" rows="3" id="newCustomerRef"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-info" type="button" id="newCustomerSaveButtonUpdated">{{ i18n.trans('save') }}</button>
                    </div>
                </div>
                <table class="table search-table table-striped">
                    <thead>
                    <tr>
                        <th class="w-90" scope="col">{{ i18n.trans('customer') }}</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody id="customerSearchResult">
                    <tr>
                        <td colspan="2">Escribe en el cuadro para buscar</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% block js %}
    <script type="module" src="{{ asset('Plugins/Ollinete/Assets/JS/POS/App.js') }}"></script>
{% endblock %}